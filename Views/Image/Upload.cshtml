@{
    ViewData["Title"] = "Upload Image";
}

<h2>Upload Image</h2>

<form method="post" enctype="multipart/form-data" asp-action="Upload">
    <div class="form-group">
        <label for="imageFile">Select Image</label>
        <input type="file" name="file" id="imageFile" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="tags">Tags (comma separated)</label>
        <input type="text" name="tags" id="tags" class="form-control" placeholder="e.g. nature, vacation" required />
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<a href="/Image/Index" class="btn btn-secondary">Back to Gallery</a>
